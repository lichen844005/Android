<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearlayout">

    <ImageView
        android:layout_width="92dp"
        android:layout_height="93dp"
        app:srcCompat="@drawable/chilli1"
        android:id="@+id/chilli1" />


    <ImageView
        android:layout_width="92dp"
        android:layout_height="93dp"
        app:srcCompat="@drawable/chilli2"
        android:layout_below ="@id/chilli1"
        android:id="@+id/chilli2" />


    <ImageView
        android:layout_width="57dp"
        android:layout_height="93dp"
        app:srcCompat="@drawable/chilli3"
        android:layout_below ="@id/chilli2"
        android:id="@+id/chilli3" />


    <ImageView
        android:layout_width="92dp"
        android:layout_height="93dp"
        app:srcCompat="@drawable/chilli4"
        android:layout_below ="@id/chilli3"
        android:id="@+id/chilli4"
        android:layout_weight="1" />




    <ImageView
        android:layout_width="92dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView"
        android:layout_below ="@id/chilli4"
        android:layout_weight="0.45"
        android:layout_height="93dp"
        android:adjustViewBounds="false" />


    <Button
        android:text="SexyGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignBottom="@+id/chilli2"
        android:layout_toRightOf="@+id/chilli2"
        android:layout_toEndOf="@+id/chilli2"
        android:layout_marginBottom="19dp"
        android:onClick ="sendMessage"
        android:clickable="true"/>

    <Button
        android:text="Cutebabe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:id="@+id/button2"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_above="@+id/chilli4"
        android:layout_toRightOf="@+id/chilli3"
        android:layout_toEndOf="@+id/chilli3" />

    <Button
        android:text="Fatchilli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView"
        android:layout_toRightOf="@+id/chilli4"
        android:layout_toEndOf="@+id/chilli4"
        android:layout_marginBottom="16dp"
        android:id="@+id/button3" />

    <Button
        android:text="Handsome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginBottom="17dp"
        android:id="@+id/button4" />

    <Button
        android:text="ReallyHot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/chilli1"
        android:layout_toEndOf="@+id/chilli1"
        android:layout_marginTop="19dp"
        android:id="@+id/button5" />

    <TextView
        android:text="ddddddd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/button2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="43dp"
        android:layout_marginEnd="43dp"
        android:layout_alignBottom="@+id/button2" />
</RelativeLayout>
